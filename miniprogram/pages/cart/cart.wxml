<!--pages/cart/cart.wxml-->

<wxs src="../../common.wxs" module="morejs" />
<scroll-view scroll-x class="bg-white nav">
  <view class="flex text-center">
		<view class="cu-item flex-sub {{0==TabCur?'text-green cur':''}}" bindtap="tabSelect" data-id="0">
    <text class="cuIcon-camerafill"></text>宝贝
  </view>
  <view class="cu-item flex-sub {{1==TabCur?'text-green cur':''}}" bindtap="tabSelect" data-id="1">
    <text class="cuIcon-upstagefill"></text>聊天
  </view>
  </view>
</scroll-view>
<!-- 商品购物车页 -->
<block wx:if="{{TabCur==0}}">
<view class="contain" wx:if="{{list.length>0}}">
      <block wx:for="{{list}}" wx:key="_id">
            <view class="card" bindtap="detail" data-detail="{{item.itemid}}">
                  <view class="a">
                        <view class="a1">
                              <image lazy-load src="{{item.sellerpic}}"></image>
                              {{item.sellername}}
                        </view>
                        <view class="a2">{{morejs.timelog(item.creat)}}加购</view>
                  </view>
                  <view class="b">
                        <image lazy-load src="{{item.pic}}"></image>
                        <view class="b1">
                              <view class="b11">
                                    <view class="b111 text-cut">{{item.title}}</view>

                              </view>
                              <view class="b12">￥{{item.price}}元</view>
                        </view>
                  </view>
                  <view class="c">
                        <view class="c1 bg-grey" catchtap="delete" data-detail="{{item._id}}" >删除</view>
                        <view class="c2" catchtap="startchat"data-detail="{{item}}">聊聊</view>
                        <!-- <view class="c1 bg-yellow" wx:if="{{item.status==0}}" catchtap="crash" data-crash="{{item}}">擦亮</view> -->
                  </view>
            </view>
      </block>
</view>
<!--无内容显示-->
<view class="nocontent" wx:if="{{list.length==0}}">
      <image src="/images/blank.png"></image>
      <view class="blank_text">这里空空如也~</view>
</view>
<!-- 加载更多 -->
<block wx:if="{{list.length>10}}">
      <import src="/common.wxml" />
      <template is="loadmore" data="{{nomore}}" />
</block>
<!-- 回顶部 -->
<van-transition show="{{ scrollTop>500 }}" custom-class="block" duration="600">
      <view class="totop" bindtap="gotop">
            <image src="/images/top.png"></image>
      </view>
</van-transition>
</block>
<!-- 聊天列表页 -->
<block wx:if="{{TabCur==1}}">
<view  wx:if="{{list.length>0}}">
      <block wx:for="{{list}}" wx:key="_id">
				<view class="cu-list menu-avatar">
						<view class="cu-item {{modalName=='move-box-'+ index?'move-cur':''}}" wx:for="{{4}}" wx:key bindtouchstart="ListTouchStart" bindtouchmove="ListTouchMove" bindtouchend="ListTouchEnd" data-target="move-box-{{index}}">
							<view class="cu-avatar round lg" style="background-image:url(https://ossweb-img.qq.com/images/lol/web201310/skin/big2100{{index+1}}.jpg);"></view>
							<view class="content">
								<view class="text-grey">文晓港</view>
								<view class="text-gray text-sm">
									<text class="cuIcon-infofill text-red"></text> 消息未送达</view>
							</view>
							<view class="action">
								<view class="text-grey text-xs">22:20</view>
								<view class="cu-tag round bg-grey sm">5</view>
							</view>
							<view class="move">
								<view class="bg-grey">置顶</view>
								<view class="bg-red">删除</view>
							</view>
						</view>
					</view>			
      </block>
</view>
<!--无内容显示-->
<view class="nocontent" wx:if="{{list.length==0}}">
      <image src="/images/blank.png"></image>
      <view class="blank_text">这里空空如也~</view>
</view>
<!-- 加载更多 -->
<block wx:if="{{list.length>10}}">
      <import src="/common.wxml" />
      <template is="loadmore" data="{{nomore}}" />
</block>
<!-- 回顶部 -->
<van-transition show="{{ scrollTop>500 }}" custom-class="block" duration="600">
      <view class="totop" bindtap="gotop">
            <image src="/images/top.png"></image>
      </view>
</van-transition>
</block>
