
.box {
  border-radius: 32rpx;
  width: 100%;
  background: #fff;
  padding: 30rpx 30rpx;
  box-sizing: border-box;
}
.input {
  width: 100%;
  height: 250rpx;
  padding: 10rpx;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
}
.input textarea {
  width: 100%;
  height: 130rpx;
  font-size: 32rpx;
  color: #050505;
  border-spacing: 2rpx;
}
.picarea{
  width: 100%;
  display: flex;
}
.scan{
  display: flex;
  justify-content: flex-end;
}
.scan image{
  width: 40rpx;
  height: 40rpx;
}
.sacn text{
  padding-left: 5rpx;
  font-size: 28rpx;
  letter-spacing: 2rpx;
  color: rgb(117, 114, 114);
}
.underarea{
  justify-content: space-between;
  box-sizing: border-box;
  display: flex;
}
.localarea {
  display: flex;
  align-items: center;
}
.localarea image {
  width: 40rpx;
  height: 40rpx;
}

.localarea text {
  padding-left: 5rpx;
  font-size: 28rpx;
  letter-spacing: 2rpx;
  color: rgb(87, 82, 82);
}

.count {
  display: flex;
  justify-content: flex-end;
  font-size: 28rpx;
  letter-spacing: 2rpx;
  color: #8c9aa8;
}
.contain{
  padding: 32rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  flex-direction: column;
  box-sizing: border-box;
  background: #fff;
}

/* 成功页 */
.success{
  padding: 32rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  box-sizing: border-box;
  background: #fff;
}
.success text {
  justify-self: center;
  font-size: 40rpx;
  margin-top: 30rpx;
  font-weight: 600;
}
.success image{
  justify-content: center;
  width: 145rpx;
  height: 184rpx;
}

.see {
  margin-top: 40rpx;
  font-size: 32rpx;
  letter-spacing: 3rpx;
  color: #4f93ea;
}



/* 海报生成区 */
.wrapper {
	display: flex;
	flex-direction: column;
  align-items: center;
  justify-content: center;
	height: 100%;
	width: 100%;
	padding: 60rpx 60rpx 60rpx 60rpx;
}

.block {
  width: 100%;
  height: 100%;
}


