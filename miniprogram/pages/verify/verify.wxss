/* pages/verify/verify.wxss */
.contain {
  top: 176rpx;
  left: 0rpx;
  width: 100%;
  padding: 0rpx 40rpx 0rpx 40rpx;
  box-sizing: border-box;
}

.title {
  width: 100%;
  text-align: center;
  font-size: 40rpx;
  font-weight: 600;
  letter-spacing: 6rpx;
}
.inputbar {
  margin-top: 24rpx;
  width: 100%;
  height: 92rpx;
  background: #f1f3f8;
  border-radius: 10rpx;
  text-align: left;
  padding: 0 36rpx;
  box-sizing: border-box;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #0e0e0f;
}
.contact input {
  width: 100%;
  height: 100%;
}
.avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  overflow: hidden;
} 
.pache {
  font-size: 32rpx;
  color: #030303;
}
.loginbutton{
  display: flex;
  justify-content: center;
}
.loginbutton image{
  width: 92rpx;
  height: 92rpx;
}
.distance{
  height: 50rpx;
}
.success {
  padding: 32rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  box-sizing: border-box;
  background: #fff;
}
.success image{
	justify-content: center;
  width: 145rpx;
  height: 184rpx;
}

.success text{
  font-size: 40rpx;
  font-weight: 600;
}
