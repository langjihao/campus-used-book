<wxs src="../../common.wxs" module="morejs" />
<view class="top_contain">
      <block wx:if="{{publishinfo.piclist==[]}}">
      <view class="top_img">
            <image lazy-load src="{{publishinfo.bookinfo.pic}}"></image>
      </view>
      </block>
      <block  wx:else>
            <swiper indicator-dots  indicator-active-color="#02C39A" circular>
                  <block wx:for="{{publishinfo.piclist}}" wx:key="id">
                        <swiper-item class="top_img">
                              <image  lazy-load 
                              src = "{{item.url}}" mode='widthFix' data-list="{{publishinfo.piclist}}" data-src="{{item.url}}"  bindtap='picview'/>
                        </swiper-item>
                  </block>
</swiper>
      </block>
      <view class="title text-cut">{{publishinfo.bookinfo.title}}【第{{publishinfo.bookinfo.edition}}】</view>
      <view class="author  text-cut">{{publishinfo.bookinfo.author}}</view>
      <view class="price_box">
            <view class="now_price">￥{{publishinfo.price}}.00元</view>
            <view class="pre_price">定价：￥{{publishinfo.bookinfo.price}}元</view>
      </view>
</view>
<view class="blank"></view>
<view class="center_contain">
      <view bindtap="changeTitle" data-id="{{ true }}" class="c_title {{first_title?'title_on':''}}">发布信息</view>
      <view bindtap="changeTitle" data-id="{{ false }}" class="c_title {{first_title?'':'title_on'}}">图书信息</view>
</view>

<!-- 发布信息 -->
<view hidden="{{!first_title}}">
      <view class="user_box">
            <image lazy-load src="{{selleruserinfo.info.avatarUrl}}"></image>
            <view class="des_box">

                  <view class="auth_box">
                        <view class="user_name">{{selleruserinfo.info.nickName}}</view>
                        <image src = "/images/authed.png"  wx:if="{{selleruserinfo.isauth}}"></image>
                        <image src = "/images/notauth.png"  wx:else/>
                  </view>
                  <view class="local_box">
                        <image src="/images/local.png"></image>
                        <view>{{selleruserinfo.stuinfo.Distinct}}</view>
                  </view>
            </view>
            <view class="sex">
                  <!-- <image lazy-load src="{{userinfo.info.gender==0?'/images/none.png':(userinfo.info.gender==1?'/images/boy.png':'/images/girl.png')}}"></image> -->
            </view>
      </view>
      <view class="blank"></view>
      <view class="time_box">
      <!-- 这里改成标签展示类别 -->
            <van-tag>{{sortName.name}}</van-tag>
            <view class="time">发布于{{morejs.timelog(publishinfo.creat)}}</view>
      </view>
      <view class="notes_box" wx:if="{{publishinfo.notes!==''}}">
            <view class="notes">
                  <view class="notes_text">备注信息:</view>
                  <view class="notes_text">{{publishinfo.notes}}</view>
            </view>
      </view>
      <view class="blank"></view>
      <view hidden="{{!iscard}}">
      <view class="card_grid" wx:if="{{list.length>0}}">
            <block wx:for="{{list}}" wx:key="_id">
                  <view class="card_one" bindtap="detail" data-id="{{item._id}}">
                        <image lazy-load class="card_poster" src="{{item.bookinfo.pic}}"></image>
                        <view class="card_title text-cut">{{item.bookinfo.title}}
                        </view>
                        <view class="card_author text-cut">{{item.bookinfo.author}}
                        </view>
                        <view class="card_between">
                              <view class="card_price">￥{{item.price}}.00元</view>
                              <image lazy-load class="card_buy" src="/images/buy.png"></image>
                        </view>
                  </view>
            </block>
      </view>
</view>
</view>
<!-- 图书详情 -->
<view hidden="{{first_title}}">
      <view class="detail_contain">
            <view class="detail_card detail_border ">
                  <view class="detail_title">isbn编号</view>
                  <view class="detail_content">{{bookinfo.isbn}}</view>
            </view>
            <view class="detail_card detail_border ">
                  <view class="detail_title">出版社</view>
                  <view class="detail_content">{{bookinfo.publisher}}</view>
            </view>
            <view class="detail_card detail_border ">
                  <view class="detail_title">出版地</view>
                  <view class="detail_content">{{bookinfo.pubplace}}</view>
            </view>
            <view class="detail_card detail_border ">
                  <view class="detail_title">出版时间</view>
                  <view class="detail_content">{{bookinfo.pubdate}}</view>
            </view>
            <view class="detail_card detail_border ">
                  <view class="detail_title">装帧方式</view>
                  <view class="detail_content">{{bookinfo.binding}}</view>
            </view>
            <view class="detail_card detail_border ">
                  <view class="detail_title">开本</view>
                  <view class="detail_content">{{bookinfo.format}}</view>
            </view>
            <view class="detail_card detail_border ">
                  <view class="detail_title">中图法分类</view>
                  <view class="detail_content">{{bookinfo.class}}</view>
            </view>
            <view class="detail_card">
                  <view class="detail_title">摘要</view>
                  <view class="detail_content">{{bookinfo.summary}}</view>
            </view>
      </view>
</view>
<view style="height: 96rpx;"></view>
<!--底部导航-->
<van-goods-action>
  <van-goods-action-icon icon="wap-home-o" bind:click='home' />
  <van-goods-action-icon icon="cart-o"  info="5" bind:click="navitocart" />
  <van-goods-action-icon icon="share-o" open-type="share"/>
  <van-goods-action-button text="加入购物车" type="warning" bind:click="add" />
  <van-goods-action-button text="联系卖家" bind:click="contact"/>
</van-goods-action>
<!-- 弹出获取联系方式的菜单框 -->
<van-action-sheet
show="{{ show }}"
actions="{{ actions }}"
bind:close="onClose"
bind:select="onSelect"
description="点击可以复制联系方式"
close-on-click-overlay
overlay
/>

