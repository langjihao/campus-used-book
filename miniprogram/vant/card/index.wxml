<wxs src="../wxs/utils.wxs" module="utils" />

<view class="custom-class van-card">
  <view class="{{ utils.bem('waterfall__header', { center: centered }) }}">
    <view class="van-waterfall__thumb" bind:tap="onClickThumb">
      <image
        wx:if="{{ thumb }}"
        src="{{ thumb }}"
        mode="{{ thumbMode }}"
        lazy-load="{{ lazyLoad }}"
        class="van-waterfall__img thumb-class"
      />
      <slot wx:else name="thumb" />
      <van-tag
        wx:if="{{ tag }}"
        mark
        type="danger"
        custom-class="van-waterfall__tag"
      >
        {{ tag }}
      </van-tag>
      <slot wx:else name="tag" />
    </view>

    <view class="van-waterfall__content {{ utils.bem('waterfall__content', { center: centered }) }}">
      <view>
        <view wx:if="{{ title }}" class="van-waterfall__title title-class">{{ title }}</view>
        <slot wx:else name="title" />

        <view wx:if="{{ desc }}" class="van-waterfall__desc desc-class">{{ desc }}</view>
        <slot wx:else name="desc" />

        <slot name="tags" />
      </view>

      <view class="van-waterfall__bottom">
        <slot name="price-top" />
        <view wx:if="{{ price || price === 0 }}" class="van-waterfall__price price-class">
          <text>{{ currency }}</text>
          <text class="van-waterfall__price-integer">{{ integerStr }}</text>
          <text class="van-waterfall__price-decimal">{{ decimalStr }}</text>
        </view>
        <slot wx:else name="price" />
        <view wx:if="{{ originPrice || originPrice === 0 }}" class="van-waterfall__origin-price origin-price-class">{{ currency }} {{ originPrice }}</view>
        <slot wx:else name="origin-price" />
        <view wx:if="{{ num }}" class="van-waterfall__num num-class">x {{ num }}</view>
        <slot wx:else  name="num" />
        <slot name="bottom" />
      </view>
    </view>
  </view>

  <view class="van-waterfall__footer">
    <slot name="footer" />
  </view>
</view>
