/* pages/quickpublish/quickpublish.wxss */
@import '../../common.wxss';
.box {
  border-radius: 32rpx;
  width: 100%;
  background: #fff;
  padding: 30rpx 30rpx;
  box-sizing: border-box;
  box-shadow: 0 0 20rpx #eee;
}
.input {
  width: 100%;
  height: 250rpx;
  padding: 10rpx;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
}

.input textarea {
  width: 100%;
  height: 130rpx;
  font-size: 32rpx;
  color: #050505;
  border-spacing: 2rpx;
}
.picarea{
  width: 100%;
  display: flex;
}
.scan{
  display: flex;
  justify-content: flex-end;
}
.scan image{
  width: 40rpx;
  height: 40rpx;
}
.sacn text{
  padding-left: 5rpx;
  font-size: 28rpx;
  letter-spacing: 2rpx;
  color: rgb(117, 114, 114);
}
.underarea{
  justify-content: space-between;
  box-sizing: border-box;
  display: flex;
}
.localarea {
  display: flex;
  align-items: center;
}
.localarea image {
  width: 40rpx;
  height: 40rpx;
}

.localarea text {
  padding-left: 5rpx;
  font-size: 28rpx;
  letter-spacing: 2rpx;
  color: rgb(87, 82, 82);
}

.count {
  display: flex;
  justify-content: flex-end;
  font-size: 28rpx;
  letter-spacing: 2rpx;
  color: #8c9aa8;
}
.contain{
  padding: 32rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  flex-direction: column;
  box-sizing: border-box;
  background: #fff;
}
.c_contain {
  position: relative;
  width: 100%;
  background: #fff;
  display: flex;
  align-items: center;
  flex-direction: column;
  box-sizing: border-box;
}

.c_success {
  width: 145rpx;
  height: 184rpx;
  margin-top: 130rpx;
}

.c_title {
  font-size: 40rpx;
  margin-top: 30rpx;
  font-weight: 600;
}

.c_des {
  margin-top: 30rpx;
  font-size: 28rpx;
  line-height: 45rpx;
  color: #898989;
}

.c_see {
  margin-top: 40rpx;
  font-size: 32rpx;
  letter-spacing: 3rpx;
  color: #4f93ea;
}

.c_again {
  margin-top: 40rpx;
  width: 500rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background: #02C39A;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  letter-spacing: 4rpx;
}
.b_contain {
  padding: 32rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  background: #fff;
  box-shadow: 0 30rpx 20rpx rgb(240, 240, 240);
}

.b_top {
  display: flex;
}

.b_poster {
  width: 270rpx;
  display: flex;
  justify-content: center;
}

.b_poster image {
  width: 250rpx;
  height: 250rpx;
}

.b_title {
  width: 100%;
  font-size: 32rpx;
  line-height: 50rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
}

.b_content {
  width: 410rpx;
  height: 250rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.b_dcontain {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 4rpx;
}

.b_author {
  font-size: 28rpx;
  letter-spacing: 2rpx;
  color: #000;
}

.b_price {
  font-size: 30rpx;
  color: rgb(255, 0, 0);
  letter-spacing: 2rpx;
  white-space: nowrap;
}

.b_des {
  font-size: 26rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #aaaaab;
}
.b_right {
  width: 70rpx;
  height: 70rpx;
  justify-content:space-around
}


