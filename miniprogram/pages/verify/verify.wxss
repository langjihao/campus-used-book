/* pages/verify/verify.wxss */
.inputbox {
  width: 100%;
  padding: 0rpx 40rpx 0rpx 40rpx;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
}

.title {
  width: 100%;
  text-align: center;
  font-size: 40rpx;
  font-weight: 600;
  letter-spacing: 6rpx;
}
.inputbar {
	margin-top: 32rpx;
	width: 100%;
	height: 100rpx;
  background: #f1f3f8;
  border-radius: 10rpx;
  text-align: left;
  padding: 0 36rpx;
  box-sizing: border-box;
  font-size: 32rpx;
  color: #0e0e0f;
}

.loginbutton{
  display: flex;
  justify-content: center;
}
.loginbutton image{
  width: 92rpx;
  height: 92rpx;
}
.distance{
  height: 50rpx;
}
.success {
  padding: 32rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  box-sizing: border-box;
  background: #fff;
}
.success image{
	justify-content: center;
  width: 145rpx;
  height: 184rpx;
}
.success text{
  font-size: 40rpx;
  font-weight: 600;
}
