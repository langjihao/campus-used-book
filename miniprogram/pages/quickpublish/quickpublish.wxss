/* pages/quickpublish/quickpublish.wxss */
@import '../../common.wxss';
.notes {
  width: 100%;
  padding: 23rpx;
  display: flex;
  box-sizing: border-box;
}

.text {
  width: 100%;
  height: 250rpx;
  padding: 20rpx;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  background: rgb(236, 233, 233);
}

.text textarea {
  width: 100%;
  height: 130rpx;
  font-size: 32rpx;
  color: #050505;
  border-spacing: 2rpx;
}

.count {
  display: flex;
  justify-content: flex-end;
  font-size: 28rpx;
  letter-spacing: 2rpx;
  color: #8c9aa8;
}
